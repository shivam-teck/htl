<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="payment_term_form_inherited" model="ir.ui.view">
            <field name="name">payment.term.form.inherited</field>
            <field name="model">account.payment.term</field>
            <field name="inherit_id" ref="account.view_payment_term_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='line_ids']/list//field[@name='value']" position="before">
                    <field name="sequence" widget="handle"/>
                </xpath>
                <xpath expr="//field[@name='line_ids']/list//field[@name='value']" position="after">
                    <field name="desc"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>