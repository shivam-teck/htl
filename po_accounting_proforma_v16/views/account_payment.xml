<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="payment_term_form_inherited" model="ir.ui.view">
            <field name="name">payment.term.form.inherited</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group/group[2]/field[@name='journal_id']" position="after">
                    <field name="order_id" readonly="state == 'posted'"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>