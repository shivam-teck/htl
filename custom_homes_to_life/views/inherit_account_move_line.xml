<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="inherit_account_move_line_view" model="ir.ui.view">
        <field name="name">inherit.account.move.line.view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/notebook/page[@name='invoice_tab']/field[@name='invoice_line_ids']/list/field[@name='tax_ids']"
                   position="after">
                <field name="additional_discount" groups="custom_homes_to_life.group_access_report" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>