<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="inherit_helpdesk_form_view" model="ir.ui.view">
        <field name="name">inherit.helpdesk.form.view</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group/group[2]/field[@name='partner_id']" position="after">
                <field name="order_id" options="{'no_create': True}"/>
                <field name="oc_no"/>
                <field name="product_ids" options="{'no_create': True}" widget="many2many_tags" invisible="1"/>
                <field name="product_id" options="{'no_create': True}"/>
                <field name="mc"/>
                <field name="article_description"/>
                <field name="company_name"/>

            </xpath>
            <xpath expr="//form/sheet/group/group[1]/field[@name='tag_ids']" position="after">
                <field name="company_id" groups="base.group_multi_company" context="{'create': False}"/>
            </xpath>
            <xpath expr="//form/sheet/group/group[1]/field[@name='company_id']" position="after">

                <field name="closer_date"/>
                <field name="disposition"/>
                <field name="business_format"/>
                <field name="order_number"/>
                <field name="remark1"/>
                <field name="remark2"/>

            </xpath>
            <xpath expr="//form/sheet/group" position="after">
                <notebook invisible="1">
                    <page string="Order Line">
                        <field name="order_line_ids" mode="tree" invisible="1">
                            <list string="Sale Order Lines">
                                <field name="product_id"/>
                                <field name="product_uom_qty"/>
                            </list>
                        </field>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>
</odoo>