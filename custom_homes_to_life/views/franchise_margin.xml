<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="franchise_margin_view_form" model="ir.ui.view">
        <field name="name">franchise.margin.view.form</field>
        <field name="model">franchise.margin</field>
        <field name="arch" type="xml">
            <form string="Material Master">
                <sheet>
                    <group>
                        <field name="product_category"/>
                        <field name="margin_rate"/>
                        <field name="company"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="franchise_margin_view_tree" model="ir.ui.view">
        <field name="name">franchise.margin.view.tree</field>
        <field name="model">franchise.margin</field>
        <field name="arch" type="xml">
            <list>
                <field name="product_category"/>
                <field name="margin_rate"/>
                <field name="company"/>
            </list>
        </field>
    </record>

    <record id="franchise_margin_action" model="ir.actions.act_window">
        <field name="name">Franchise Margin</field>
        <field name="res_model">franchise.margin</field>
        <field name="view_mode">list,form</field>
    </record>
    <!--    MenuItems added in Crm Configuration-->


    <menuitem id="menu_franchise_margin_action"
              name="Franchise Margin" parent="sale.menu_sale_config" action="franchise_margin_action"
              sequence="22"/>

<!--    franchise product category-->
    <record id="franchise_margin_product_category_view_form" model="ir.ui.view">
        <field name="name">franchise.margin.view.form</field>
        <field name="model">franchise.product.category</field>
        <field name="arch" type="xml">
            <form string="Material Master">
                <sheet>
                    <group>
                        <field name="product_category"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="franchise_margin_product_category_view_tree" model="ir.ui.view">
        <field name="name">franchise.margin.view.tree</field>
        <field name="model">franchise.product.category</field>
        <field name="arch" type="xml">
            <list>
                <field name="product_category"/>

            </list>
        </field>
    </record>

    <record id="franchise_product_category_action" model="ir.actions.act_window">
        <field name="name">Product Category Margin</field>
        <field name="res_model">franchise.product.category</field>
        <field name="view_mode">list,form</field>
    </record>
    <!--    MenuItems added in Crm Configuration-->


    <menuitem id="menu_franchise_product_category_margin_action"
              name="Franchise Category Margin" parent="sale.menu_sale_config" action="franchise_product_category_action"
              sequence="23"/>
</odoo>